{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": false,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es6", "dom" ]
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./spec"
  ]
}
